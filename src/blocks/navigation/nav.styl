#navigation
  position fixed
  top 0
  transform translateX(- $nav_width)
  z-index: 100
  width $nav_width
  height 100vh
  color $color_white
  background-image url('../img/wooden_bg.jpg')
  background-position center center
  background-size cover
  background-repeat no-repeat
  transition: all 0.5s
  .menu-list
    text-align: center
    .logo-wrapper
      max-width 60%
      //height 140px
      margin 25px auto 0
      position: relative
      &::before
        background-color: rgba(255,255,255,0.1)
        box-shadow 1px 1px 15px 5px #000 inset
        display: block
        content: ''
        position: absolute
        left: 0
        top: 0
        width 100%
        height 100%
      //img
      //  max-height 100%
    .title
      font-size 2em
    .menu-links
      display: flex
      flex-direction: column
      align-items: center
      &__link
        display: flex;
        flex-direction: column;
        align-items center
        margin: 2em 0;
        &:hover .link-name::before,
        &:focus .link-name::before
          transform: translate3d(100%,0,0) translate3d(1px,0,0);
        &:hover .link-name::after,
        &:focus .link-name::after
          transform: translate3d(0,0,0);
        &:hover .link-label
          color: #fff;
        .link-name
          font-size: 1.75em;
          font-weight: bold;
          overflow: hidden;
          padding: 0 0.25em;
          text-transform: uppercase;
          position: relative
          color: #fff;
          &::before,
          &::after
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: #eb2141;
            transform: translate3d(-100%,0,0) translate3d(-1px,0,0);
            transition: transform 0.7s;
            transition-timing-function: cubic-bezier(0.7,0,0.3,1);
          &::after
            top: calc(50% - 2px)
            height: 4px
        .link-label
          font-size: 1em;
          margin: 0.5em 0 0 0;
          margin-top: 0.25em;
          padding: 0.5em;
          color: #565656;
          transition: color 0.7s;
          transition-timing-function: cubic-bezier(0.7,0,0.3,1)
  &.opened
    transform translateX(0)
    transition transform 0.5s
  &.opened body
    overflow hidden!important
  &.opened ~ .content_wrapper
    transform translate3d($nav_width, 0, 0)
  &.opened ~ .content_wrapper::after
    width 100%
    height 100%
    opacity 1
    transition opacity 0.5s
  .menu-button
    height: 3em
    width: 3em
    position: absolute
    right: -20%
    top: 20px
    font-size: 12px
    cursor: pointer
    transition: .2s all
    -webkit-tap-highlight-color: transparent;
    &:hover .menu-button__parts
      background-color: #6f371f
    &::after
      content: ''
      display: block
      position: absolute
      height: 150%
      width: 150%
      top: -25%
      left: -25%
    .menu-button__parts
      //background red
      top 50%
      margin-top -0.125em
      &::after
        left: 0
        top: -1em
      &::before
        left: 1em
        top: 1em
    .menu-button__parts,
    .menu-button__parts::after,
    .menu-button__parts::before
      pointer-events: none
      display: block
      content: ''
      width: 100%
      border-radius: 0.25em
      background-color rgba(0,0,0,0.3)
      height: 0.25em
      position: absolute
      transform: rotate(0)
      transition: .2s top .2s, .1s left, .2s transform, .4s background-color .1s;

  .menu-button .menu-button__parts:after {
    left: 0;
    top: -1em; }

  .menu-button .menu-button__parts:after,
  .menu-button .menu-button__parts:before {
    width: 2em;
  }

  #navigation.opened .menu-button .menu-button__parts,
  #navigation.opened .menu-button .menu-button__parts:after,
  #navigation.opened .menu-button .menu-button__parts:before {
    transition: .2s background-color, .2s top, .2s left, .2s transform .15s;
  }

  #navigation.opened .menu-button .menu-button__parts {
    background-color: transparent; }

  #navigation.opened .menu-button .menu-button__parts:before,
  #navigation.opened .menu-button .menu-button__parts:after {
    left: 0.5em;
    top: 0; }

  #navigation.opened .menu-button .menu-button__parts:before {
    transform: rotate(-45deg); }

  #navigation.opened .menu-button .menu-button__parts:after {
    transform: rotate(45deg); }
